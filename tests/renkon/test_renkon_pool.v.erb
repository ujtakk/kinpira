% load "renkon.rb"

`timescale 1 ns / 1 ps

module test_renkon_pool;
`include "ninjin.vh"
`include "renkon.vh"

    /*AUTOREGINPUT*/

    /*AUTOWIRE*/

    //clock
    always
    begin
        clk = 0;
        #(STEP/2);
        clk = 1;
        #(STEP/2);
    end

    initial
    begin
        #(STEP);
        out_en = 0;
        <%- for i in 0...4 -%>
        pixel_feat<%=i%> = <%=i%>;
        <%- end -%>
        #(STEP*2);
        out_en = 1;
        #(STEP*2);
        pixel_feat0 = 8;
        pixel_feat1 = 5;
        pixel_feat2 = 6;
        pixel_feat3 = 1;
        #(STEP*2);
        out_en = 0;
        #(STEP*2);
        pixel_feat0 = 0;
        pixel_feat1 = 5;
        pixel_feat2 = 6;
        pixel_feat3 = 1;
        #(STEP*2);
        out_en = 1;
        #(STEP*2);
        $finish();
    end

    always
    begin
        #(STEP/2-1);
        $display(
            "%d | ", out_en,
            <%- for i in 0...4 -%>
            "%d ", pixel_feat<%=i%>,
            <%- end -%>
            "| %d", pmap
        );
        #(STEP/2+1);
    end

    renkon_pool dut0(/*AUTOINST*/);

endmodule

